@using Dashboard.PL.ViewModels.IdentityVMs
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ResetPassword" method="post" asp-controller="Account">
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Password" placeholder="New Password" required="">
            <span asp-validation-for="Password"></span>
            <br />
            <input asp-for="ConfirmPassword" placeholder="Confirm New Password" required="">
            <span asp-validation-for="ConfirmPassword"></span>
            <br />

           
            <input type="submit" value="submit">
        </form>
    </div>
</div>

@section Validation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

