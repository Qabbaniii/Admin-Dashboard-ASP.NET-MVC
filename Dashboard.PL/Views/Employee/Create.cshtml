@using Dashboard.DAL.Models.Employees
@using Dashboard.DAL.Models.Shared
@using Dashboard.PL.ViewModels.EmployeeVMs
@model EmployeeViewModel
@{
    ViewData["Title"] = "Create";

}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Employee</h1>
    <form method="post" asp-controller="Employee" asp-action="Create" class=" row col-8" enctype="multipart/form-data">

        <partial name="partialviews\createEditpartialview" model="@Model" />

        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Save" />
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>

@section ValidationSection
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

